<section class="center-vertical">
	<h1>検索フォーム</h1>
	<form action="/search" method="post">
		<input type="text" name="search_word" placeholder="アーティスト名">
		<input type="submit" value="検索">
	</form>
	<h2>検索結果</h2>
	<% unless @songs.nil? %>
		<div class="center-hrizontal">
			<% @songs.each do |song| %>
				<div class="post center-vertical">
					<img src="<%= song["artworkUrl100"] %>">
					<p><%= song["artistName"] %></p>
					<p><%= song["collectionName"] %></p>
					<p><%= song["trackName"] %></p>
					<a href="<%= song["previewUrl"] %>">サンプル</a>
					<form action="/new" method="post">
						<input type="hidden" name="cd_image_url" value="<%= song["artworkUrl100"] %>">
						<input type="hidden" name="artist"  value="<%= song["artistName"] %>">
						<input type="hidden" name="album" value="<%= song["collectionName"] %>">
						<input type="hidden" name="title" value="<%= song["trackName"] %>">
						<input type="hidden" name="sample" value="<%= song["previewUrl"] %>">
						<input type="text" name="comment" placeholder="コメント">
						<input type="submit" value="投稿">
					</form>
				</div>
			<% end %>
		</div>
	<% else %>
	<%# TODO: 検索結果によって分岐 %>
	<p>検索結果がありません</p>
	<% end %>
</section>